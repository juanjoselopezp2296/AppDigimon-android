<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    style="@style/cvPrincipal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgMascota"
            style="@style/cvPrincipalImg"
            android:src="@drawable/digimon_tentomon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnLike"
                style="@style/cvSecondImg"
                android:background="@drawable/digimon_like"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tvNombreCV"
                style="@style/cvPrincipalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_alignParentLeft="true"
                android:text="@string/pnombre"/>
            <ImageView
                style="@style/cvSecondImg"
                android:src="@drawable/digimon_star"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/tvLikeCV"
                style="@style/cvSecondTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/plike"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>